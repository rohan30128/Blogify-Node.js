<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Blog Page</title>
  </head>
  <body>
    <%- include('./partials/nav') %>
    
   <div class="container mt-4">
    <h1 class="text-success"><%= blog.title %></h1>
    <img src="<%= blog.coverImageURL %>" width="700px" height="350px" style="object-fit: contain;">
    <pre class="mt-5"> <%= blog.body %></pre>
   </div>

   <div class="container mt-4">
     <img src="<%= blog.createdBy.profileImage %>" width="50px" height="50px" >
     <%= blog.createdBy.fullName %>
   </div>

   <div class="container mt-4 mb-5">
    <h1>Comments (<%= comments.length %>)</h1>
    <% if (locals.user) { %>
      <form action="/blog/comment/<%= blog._id %>" method="post">
        <div class="mt-3 mb-3">
          <input type="text" placeholder="Enter Your Comments" class="form-control" name="content">
        </div>
        <button class="btn btn-success" type="submit">Add</button>
      </form>
      
    <% } %>
    <div class="mt-3">
      <% comments.forEach(comment => { %>
       <div>
        <img src="<%= comment.createdBy.profileImage %>" width="50px" height="50px" >
   <%= comment.createdBy.fullName %>
   <pre><%= comment.content %></pre>
       </div>
      <% }) %>
    </div>
   </div>
    <%- include('./partials/scripts') %>
  </body>
</html>
